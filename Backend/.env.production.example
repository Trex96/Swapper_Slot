# Server
PORT=5000
NODE_ENV=production

# Database (Use MongoDB Atlas in production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/slotswapper?retryWrites=true&w=majority

# JWT (Use strong secret in production)
JWT_SECRET=super_strong_secret_key_min_32_characters_long
JWT_EXPIRE=7d

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100